#pragma once

namespace SpatialML {

// Version number definitions
#define SPATIALMP4_VERSION_MAJOR @PROJECT_VERSION_MAJOR@
#define SPATIALMP4_VERSION_MINOR @PROJECT_VERSION_MINOR@
#define SPATIALMP4_VERSION_PATCH @PROJECT_VERSION_PATCH@
#define SPATIALMP4_VERSION "@PROJECT_VERSION@"

// Version string
inline const char* GetVersion() {
    return SPATIALMP4_VERSION;
}

// Get major version number
inline int GetMajorVersion() {
    return @PROJECT_VERSION_MAJOR@;
}

// Get minor version number
inline int GetMinorVersion() {
    return @PROJECT_VERSION_MINOR@;
}

// Get patch version number
inline int GetPatchVersion() {
    return @PROJECT_VERSION_PATCH@;
}

} // namespace SpatialML 